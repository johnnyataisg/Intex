@model Intex.models.NewOrder

@{
    ViewBag.Title = "Create New Work Order";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<header class="employee-header order-table-box">
    <h2>Create New Work Order</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div style="width: 30%;" class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-10">
                    Compound Name
                    @Html.EditorFor(model => model.CompoundName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CompoundName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Number of Samples
                    @Html.EditorFor(model => model.NumberSamples, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumberSamples, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Special Instructions
                    @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-danger btn-lg" />
                </div>
            </div>
        </div>
    }
</header>
