@model Intex.models.WorkOrders
@{
    ViewBag.Title = "Edit Work Order Information";
    Layout = "~/Views/Shared/_SingaporeLayout.cshtml";
}

<header class="employee-header order-table-box">
    <h2>Edit Work Order Information</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div style="width: 30%;" class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LTNumber)

        <div class="form-group">
            <div class="col-md-10">
                LT Number
                @Html.TextBoxFor(model => model.LTNumber, new { @readonly = "readonly", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ReceiveDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Compound Name
                @Html.DropDownList("CompoundID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CompoundID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Customer Name
                @Html.DropDownList("CustomerID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Comments
                @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                Has Discount (Y/N)
                @Html.EditorFor(model => model.HasDiscount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HasDiscount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-danger btn-lg" />
            </div>
        </div>
    </div>
    }
</header>

