@model Intex.models.Customers

@{
    ViewBag.Title = "Create New Account";
    Layout = "~/Views/Shared/_HomepageLayout.cshtml";
}

<div style="padding-left: 5%; padding-top: 10%; background-color: #56afc1e0; padding-bottom: 10px;">
    <h2>Create New Account</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label>Full Name</label>
                <div class="col-md-10" style="padding-left: 0; width: 50%;">
                    @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Phone Number
                <div class="col-md-10" style="padding-left: 0; width: 50%;">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Email Address
                <div class="col-md-10" style="padding-left: 0; width: 50%;">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Street Address
                <div class="col-md-10" style="padding-left: 0; width: 50%;">
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                City
                <div class="col-md-10" style="padding-left: 0; width: 50%;">
                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Zip Code
                <div class="col-md-10" style="padding-left: 0; width: 50%;">
                    @Html.EditorFor(model => model.Zip, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Zip, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                State
                <div class="col-md-10" style="padding-left: 0; width: 50%;">
                    @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Country
                <div class="col-md-10" style="padding-left: 0; width: 50%;">
                    @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Payment Method
                <div class="col-md-10" style="padding-left: 0; width: 50%;">
                    @Html.EditorFor(model => model.PaymentInfo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PaymentInfo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Username
                <div class="col-md-10" style="padding-left: 0; width: 50%;">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Password
                <div class="col-md-10" style="padding-left: 0; width: 50%;">
                    @Html.PasswordFor(model => model.customerusers.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.customerusers.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="padding-left: 0;">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </div>
        </div>
    }
</div>                        